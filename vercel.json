{
  "version": 2,
  "builds": [
    {
      "src": "web_app/api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "web_app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "web_app/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/web_app/static/$1"
    }
  ]
}
